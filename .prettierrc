{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "angular",
        "singleQuote": false
      }
    },
    {
      "files": [
        "*.css",
        "*.scss",
        "*.sass"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
